extends ../layouts/application.pug

block header
  .container.w-min-50.text-center
    h1= t('views.session.new.signIn')

block content
  .container.d-flex.justify-content-around.p-5.border.rounded-3.w-75.shadow.bg-light
    .container
      img(src=assetPath('task-manager.png') alt="task manager")
    .container
      +formFor()(action=route('session') method='post')
        +input(signInForm, 'email', errors)(type="text")
        +input(signInForm, 'password')(type="password")
        +submit(signInForm)(value=t('views.session.new.submit'))
